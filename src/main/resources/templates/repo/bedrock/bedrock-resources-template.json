{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "...",
	"Resources": {
		"test": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": "bedrock.amazonaws.com"
							},
							"Action": "sts:AssumeRole",
							"Condition": {
								"StringEquals": {
									"aws:SourceAccount": { "Ref" : "${AWS::AccountId}"}
								},
								"ArnLike": {
									"aws:SourceArn": {"Fn::Sub": "arn:aws:bedrock:${AWS::Region}:${AWS::AccountId}:agent/*"}								}
							}
						}
					]
				},
				"Policies": [
					{
						"PolicyName": "allowBedrockToInvokeAnyModel",
						"PolicyDocument": {
							"Version": "2012-10-17",
							"Statement": [
								{
									"Effect": "Allow",
									"Action": "bedrock:InvokeModel",
									"Resource": [
										"arn:aws:bedrock:us-east-1::foundation-model/*"
									]
								}
							]
						}
					}
				]
			}
		}
	}
}
