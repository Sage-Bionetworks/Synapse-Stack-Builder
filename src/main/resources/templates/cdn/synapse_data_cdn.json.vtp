{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Provision a CloudFront distribution for synapse data",
  "Resources": {
    "CloudFront": {
      "Type": "AWS::CloudFront::Distribution",
      "DeletionPolicy": "Retain",
      "Properties": {
        "DistributionConfig": {
          "Comment": "CloudFront distribution for ${SubDomainName}data.synapse.org",
          "Origins": [
            {
              "DomainName": "${SubDomainName}data.synapse.org",
              "Id": "S3OriginId",
              "S3OriginConfig": {
                "OriginAccessIdentity": {
                }
              }
            }
          ],
          "DefaultCacheBehavior": {
            "AllowedMethods": [
              "GET",
              "HEAD"
            ],
            "Compress": false,
            "CachePolicyId": "4135ea2d-6df8-44a3-9df3-4b5a84be39ad",
            "TargetOriginId": "S3OriginId",
            "TrustedKeyGroups": [
              {
                "Ref": "CloudFrontPublicKeyGroup"
              }
            ],
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "Enabled": true,
          "IPV6Enabled": true,
          "PriceClass": "PriceClass_100",
          "ViewerCertificate": {
            "CloudFrontDefaultCertificate": true
          }
        }
      }
    },
    "CloudFrontPublicKeyGroup": {
      "Type": "AWS::CloudFront::KeyGroup",
      "Properties": {
        "KeyGroupConfig": {
          "Comment": "Public key group for ${SubDomainName}data.synapse.org CloudFront infrastructure",
          "Items": [
            {
              "Ref": "CloudFrontPublicKey"
            }
          ],
          "Name": "${SubDomainName}data.synapse.org-key-group"
        }
      }
    },
    "CloudFrontPublicKey": {
      "Type": "AWS::CloudFront::PublicKey",
      "Properties": {
        "PublicKeyConfig": {
          "CallerReference": "${SubDomainName}data.synapse.org-public-key",
          "Comment": "Public key for ${SubDomainName}data.synapse.org CloudFront infrastructure",
          "Name": "${SubDomainName}data.synapse.org-public-key",
          "EncodedKey": {
            "Ref": ${DataCdnPublicKey}
          }
        }
      }
    }
  }
}

